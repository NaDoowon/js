<c:FragmentDefinition 
    xmlns:c="sap.ui.core"
    xmlns="sap.m"
    xmlns:t="sap.ui.table">

    <Dialog id="idDialog2" title="Value Help"
            beforeOpen="onBeforeOpen2"
            resizable="true"
            draggable="true"
            contentHeight="50%"
            contentWidth="60%"> 
        <content>
        <!-- path : 조건 줄곳(필터 객체) / operator : 비교연산 / value : 값 -->
           <t:Table 
                id="idOrderTable2"
                rows= "{/Customers}"
                selectionMode="MultiToggle"
                visibleRowCount="7"
                paste="onPaste"
                ariaLabelledBy="title">
    
           <t:extension>
            <OverflowToolbar style="Clear" >
                <Title id="title2" text="CustomerID Value Help"/>
            </OverflowToolbar>
           </t:extension>
            <t:columns>
                <t:Column >
                <Label text="CustomerID" />
                <t:template>
                    <Text text="{CustomerID}" wrapping="false" />
                </t:template>
                </t:Column>

                <t:Column >
                <Label text="CompanyName" />
                <t:template>
                    <Text text="{CompanyName}" wrapping="false" />
                </t:template>
                </t:Column>

                <t:Column >
                <Label text="Country" />
                <t:template>
                    <Text text="{Country}" wrapping="false" />
                </t:template>
                </t:Column>

                <t:Column >
                <Label text="City" />
                <t:template>
                    <Text text="{City}" wrapping="false" />
                </t:template>
                </t:Column>


            </t:columns>   
           </t:Table>
        </content>
        <endButton>
            <Button text="Close" press="onClose" />
        </endButton>
    </Dialog>
</c:FragmentDefinition>