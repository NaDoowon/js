<c:FragmentDefinition 
    xmlns:c="sap.ui.core"
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
    controllerName="zpjtb0710.controller.Main">

    <Dialog id="idDialog" title="SCARR 조회"
		resizable="true"
		draggable="true"
        contentHeight="80%"
        contentWidth="80%">
        <content>
            <t:Table
				rows="{scarr>/SCARRSet}"
				selectionMode="Single"
				selectionBehavior="RowOnly"
				paste="onPaste"
				ariaLabelledBy="title">
				<t:extension>
					<OverflowToolbar style="Clear">
						<Title text="SCARR"/>
					</OverflowToolbar>
				</t:extension>
				<t:columns>
                    <t:Column>
						<Label text="Carrid" />
						<t:template>
							<Text text="{scarr>Carrid}" />
						</t:template>
					</t:Column>
                    <t:Column>
						<Label text="Carrname" />
						<t:template>
							<Text text="{scarr>Carrname}" />
						</t:template>
					</t:Column>
                    <t:Column>
						<Label text="Currcode" />
						<t:template>
							<Text text="{scarr>Currcode}" />
						</t:template>
					</t:Column>
                     <t:Column>
						<Label text="Url" />
						<t:template>
							<Text text="{scarr>Url}" />
						</t:template>
					</t:Column>
				    </t:columns>
			    </t:Table>
        </content>
        <endButton>
        <Button text="Close" press="onClose" />
        </endButton>
    </Dialog>
</c:FragmentDefinition>